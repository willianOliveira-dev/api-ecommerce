{
    "compilerOptions": {
        "target": "ES2020",
        "module": "nodenext",
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "./src",
        "paths": {
            "@routes/*": ["routes/*"],
            "@repository/*": ["repository/*"]
        },
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"]
}
